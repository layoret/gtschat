
<div class="container">
    <div class="card card-container">
            <img id="profile-img" class="profile-img-card" src="https://www.winhelponline.com/blog/wp-content/uploads/2017/12/user.png" />
            <p id="profile-name" class="profile-name-card"></p>
<form method="post" action="/login" class="form-signin">
<div class="card">
<div class="card-header text-primary">Ingreso de Usuario</div>
<div class="card-body">
<div class="row">
<div class="col-sm-3">
<label for="usuario">Usuario:</label>
</div>
<div class="col-sm">
<input class="form-control" id="usuario" type="text" name="usuario"/>
</div>
</div>
<div class="row">
<div class="col-sm-3">
<label for="password">Contrase√±a:</label>
</div>
<div class="col-sm">
<input class="form-control" id="password" type="password" name="pwd"/>
</div>
</div>
</div>
<div class="card-footer">
<input class="btn btn-primary btn-sm" type="submit" value="Ingresar"/>
</div>
</div>
</form>
{{#if loginError}}
<div class="alert alert-danger">
   {{loginError}}
  </div>
  {{/if}}
</div>
</div>
